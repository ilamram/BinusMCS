<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MovieDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_movies_details"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/txt_movie_title_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Movie Title"
            android:textSize="20dp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/tv_description_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"
            android:text="Name of the movie" />

        <TextView
            android:id="@+id/tv_movie_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"
            android:text="Rating" />

        <TextView
            android:id="@+id/tv_movie_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"
            android:text="Country" />

        <TextView
            android:id="@+id/tv_movie_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:text="Money"
            android:textSize="18sp"
            android:layout_marginHorizontal="35dp"

            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_buy_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:text="Order"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:id="@+id/lnr_quantity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:id="@+id/remove"
                android:src="@drawable/ic_baseline_remove_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:id="@+id/tv_quantity"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:id="@+id/add"
                android:src="@drawable/ic_baseline_add_24"/>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>